<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnglishActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back"
        android:weightSum="10"
        >

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/kidstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids Talking"
                android:textSize="30sp"
                android:gravity="start"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/kidsdesc"
                android:layout_below="@id/kidstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English "
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="130dp"
                android:textSize="28sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:src="@drawable/learn"
                android:layout_marginLeft="300dp"

                />

        </RelativeLayout>

        <GridLayout
            app:layout_constraintTop_toBottomOf="@id/relativelayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:rowCount="3"
            android:columnCount="1"
            android:layout_marginTop="10dp"

            >


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_LettersEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="15dp"

                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardgradiant">


                    <ImageView
                        android:src="@drawable/lettersenglish"
                        android:layout_width="88dp"
                        android:layout_height="88dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Letters"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"

                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_numbersEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardgradiant">


                    <ImageView
                        android:src="@drawable/numberenglish"
                        android:layout_width="150dp"
                        android:layout_height="88dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numbers"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"

                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_colorsEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardgradiant">


                    <ImageView
                        android:src="@drawable/colors"
                        android:layout_width="100dp"
                        android:layout_height="88dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colors"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"

                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>






        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>